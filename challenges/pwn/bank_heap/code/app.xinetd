service app
{
    disable        = no
    socket_type    = stream
    protocol       = tcp
    wait           = no
    log_type       = FILE /var/log/xinetdlog
    log_on_success = HOST PID EXIT DURATION
    log_on_failure = HOST
    user           = user
    type           = UNLISTED
    port           = 1024
    bind           = 0.0.0.0
    server         = /home/user/bank
    per_source     = 3
    rlimit_cpu     = 60
    rlimit_as      = 1024M
}

